<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
    <persistence-unit name="activeCrmUnit" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.active.activecrm.data.entities.party.Party</class>
        <class>com.active.activecrm.data.entities.dicts.PartyRole</class>
        <class>com.active.activecrm.data.entities.party.PartyRoleRel</class>
        <class>com.active.activecrm.data.entities.party.PartyRoleContactInfo</class>
        <class>com.active.activecrm.data.entities.party.PartyAddress</class>
        <class>com.active.activecrm.data.entities.party.PartySeason</class>
        <class>com.active.activecrm.data.entities.dicts.ContactInfoType</class>
        <class>com.active.activecrm.data.entities.dicts.AddressType</class>
        <class>com.active.activecrm.data.entities.dicts.City</class>
        <class>com.active.activecrm.data.entities.dicts.Country</class>
        <class>com.active.activecrm.data.entities.dicts.MarketingSegment</class>
        <class>com.active.activecrm.data.entities.dicts.Okved</class>
        <class>com.active.activecrm.data.entities.dicts.Opf</class>
        <class>com.active.activecrm.data.entities.dicts.PartyStatus</class>
        <class>com.active.activecrm.data.entities.dicts.Region</class>

        <properties>
            <property name="hibernate.max_fetch_depth" value="3"/>
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.connection.CharSet" value="utf8" />
            <property name="hibernate.connection.characterEncoding" value="utf8" />
            <property name="hibernate.connection.useUnicode" value="true" />
        </properties>

    </persistence-unit>
</persistence>